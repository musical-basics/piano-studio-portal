                    {event.location_type === "virtual" ? (
                      <>
                        <Video className="h-3.5 w-3.5" />
                        <span>Zoom</span>
                      </>
                    ) : (
                      <>
                        <MapPin className="h-3.5 w-3.5" />
                        <span className="truncate max-w-[200px]">{event.location_address}</span>
