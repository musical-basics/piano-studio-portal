                                        value={formData.review}
                                        onChange={(e) => setFormData({ ...formData, review: e.target.value })}
                                        required
                                        className="resize-none"
                                    />
                                </div>

                                {/* Submit Button */}
                                <Button type="submit" className="w-full" disabled={isSubmitting || formData.rating === 0}>
